# Lucide Telegram Bot Configuration
# Copy this file to .env and fill in your values

# ===== Telegram Bot Settings =====
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=LucideBot

# ===== Webhook Configuration (Production) =====
# Leave empty for development (uses polling)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# ===== Feature Flags =====
TELEGRAM_ENABLE_GROUPS=true
TELEGRAM_ENABLE_INLINE_MODE=true
TELEGRAM_ENABLE_PAYMENTS=false

# ===== Rate Limiting =====
TELEGRAM_RATE_LIMIT_MESSAGES=30
TELEGRAM_RATE_LIMIT_WINDOW=60

# ===== Backend Integration =====
BACKEND_BASE_URL=http://localhost:8000

# ===== Redis Configuration =====
# Used for rate limiting and session management
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# ===== Database Configuration =====
# Same as main Lucide backend
DATABASE_URL=postgresql://user:password@localhost:5432/lucide

# ===== Logging =====
LOG_LEVEL=INFO

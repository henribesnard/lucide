# ==============================================
# Lucide Environment Variables
# ==============================================

# Database
DATABASE_URL=postgresql://lucide_user:lucide_password@postgres:5432/lucide_db

# Redis
REDIS_URL=redis://redis:6379
ENABLE_REDIS_CACHE=true

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# LLM configuration
LLM_PROVIDER=deepseek
DEEPSEEK_API_KEY=sk-your-deepseek-key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Uncomment if you prefer OpenAI
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_MODEL=gpt-4o-mini

# Optional multi-LLM setup (fast for intent/tools, slow for analysis/response)
# ENABLE_FAST_LLM=false
# FAST_LLM_PROVIDER=openai
# FAST_LLM_MODEL=gpt-4o-mini
# FAST_LLM_API_KEY=sk-your-openai-key
# SLOW_LLM_PROVIDER=deepseek
# SLOW_LLM_MODEL=deepseek-chat
# SLOW_LLM_API_KEY=sk-your-deepseek-key

# Football API
FOOTBALL_API_KEY=your_api_football_key_here
FOOTBALL_API_BASE_URL=https://v3.football.api-sports.io

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# App
DEBUG=true
LOG_LEVEL=INFO
ENABLE_PARALLEL_API_CALLS=true
MAX_PARALLEL_TOOL_CALLS=5
ENABLE_SMART_SKIP_ANALYSIS=false
